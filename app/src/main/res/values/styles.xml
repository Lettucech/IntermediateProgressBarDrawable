<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="intermediateProgressBarStyle">@style/IntermediateProgressBarStyle</item>
    </style>

    <style name="IntermediateProgressBarStyle">
        <item name="android:minWidth">128dp</item>
        <item name="android:minHeight">128dp</item>
        <item name="ipb_gradientColorArray">@array/intermediate_progress_bar_gradient</item>
        <item name="ipb_maxSweepAngle">315</item>
        <item name="ipb_minSweepAngle">15</item>
        <item name="ipb_size">72dp</item>
    </style>

</resources>
